<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script src="/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </head>

  <nav class="topnav">
    <a href="/">Menus</a>
    <a href="/restaurants">Restaurants</a>
    <a href="/categories">Categories</a>
    <a class="active" href="/idiomes">Idiomes</a>
  </nav>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              Idiomes
              <button type="button" name="button" class="btn btn-outline-primary float-right" data-toggle="modal" data-target="#addLang">Afegir un nou idioma</button>
            </div>
            <div class="card-body">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Idioma</th>
                    <th scope="col">Pais</th>
                    <th scope="col" class="text-right">Accions</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var i = 0; i < languages.length; i++) {%>
                    <tr>
                      <td><%= languages[i].name %></td>
                      <td><%= languages[i].country %></td>
                      <td class="text-right">
                        <form action="/remove-lang" method="post">
                          <input type="text" name="cont" value="<%= languages[i].cont %>" hidden>
                          <button type="submit" class="btn btn-outline-danger">Esborrar</button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal add language -->
    <div class="modal fade" id="addLang" tabindex="-1" role="dialog" aria-labelledby="addLangLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addLangLabel">Afegir un idioma:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/create-lang" method="POST">
              <div class="form-group">
                <label for="name">Idioma:</label>
                <input class="form-control" type="text" name="name" maxlength="255" required>
              </div>
              <div class="form-group">
                <label for="country">Pais:</label>
                <input class="form-control" type="text" name="country" maxlength="255">
              </div>
              <input name="cont" value="<%= (languages.length + 1) * Math.random() * 10 %>" hidden>
              <button class="btn btn-outline-success float-right" type="submit">Afegir idioma</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- end-modal -->

  </body>
</html>
