<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <script src="/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  </head>

  <nav class="topnav">
    <a href="/">Home</a>
    <a href="/restaurants">Restaurants</a>
    <a class="active" href="/categories">Categories</a>
    <a href="/idiomes">Idiomes</a>
  </nav>

  <body>
    <div class="container row">
      <div class="column">
        <h2>Afegir un restaurant nou:</h2>
        <br>
        <form action="/create-restaurant" method="POST">
          <label for="name">Nom del restaurant:</label>
          <input type="text" name="name" maxlength="255" required>
          <br>
          <label for="address">Adreça</label>
          <input type="text" name="address" maxlength="255" required>
          <br>
          <label for="city">Ciutat</label>
          <input type="text" name="city" maxlength="255" required>
          <br>
          <label for="state">Provincia</label>
          <input type="text" name="state" maxlength="255" required>
          <br>
          <label for="zipcode">Codi postal:</label>
          <input type="number" name="zipcode" min="1" max="99999" required>
          <br>
          <label for="phone">Telèfon:</label>
          <input type="number" name="phone" min="599999999" max="999999999" required>
          <br>
          <label for="type">Tipus de restaurant</label>
          <select name="type">
            <option value="No type selected" selected disabled>Escull un tipus:</option>
            <option value="China">China</option>
            <option value="Japones">Japonesa</option>
            <option value="Kebab">Kebab</option>
            <option value="Italià">Italià</option>
            <option value="Mediterranea">Mediterranea</option>
            <option value="Americana">Americana</option>
          </select>
          <button type="submit">Afegir restaurant</button>
        </form>
      </div>
      <div class="column">
        <h2>Restaurants:</h2>
        <ul class="restaurants">
          <% for (var i = 0; i < restaurants.length; i++) {%>
          <li class="restaurant">
            <b>Nom:</b> <span><%= restaurants[i].name %></span><br>
            <b>Adreça:</b> <span><%= restaurants[i].address %></span><br>
            <b>Codi postal:</b> <span><%= restaurants[i].zipcode %></span><br>
            <b>Població:</b> <span><%= restaurants[i].city %></span><br>
            <b>Provincia:</b> <span><%= restaurants[i].state %></span><br>
            <b>Telèfon:</b> <span><%= restaurants[i].phone %></span><br>
            <b>Categoria:</b> <span><%= restaurants[i].type %></span>
          </li>
          <br>
          <% } %>
        </ul>
      </div>
    </div>
  </body>
</html>
