<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  </head>

  <nav class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/new-restaurant">Restaurants</a>
    <a href="#">Clients</a>
    <a href="#">La carta</a>
  </nav>

  <body>
    <div class="container">
      <h2>Restaurants:</h2>
      <ul class="restaurants">
        <% for (var i = 0; i < restaurants.length; i++) {%>
          <li class="restaurant">
            <span><%= restaurants[i].name %></span>
          </li>
          <li class="restaurant">
            <span><%= restaurants[i].address %></span>
          </li>
          <li class="restaurant">
            <span><%= restaurants[i].zipcode %></span>
          </li>
          <li class="restaurant">
            <span><%= restaurants[i].city %></span>
          </li>
          <li class="restaurant">
            <span><%= restaurants[i].state %></span>
          </li>
          <li class="restaurant">
            <span><%= restaurants[i].type %></span>
          </li>
          <% } %>
      </ul>

    </div>
  </body>
</html>
