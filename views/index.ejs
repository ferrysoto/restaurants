<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/main.js"></script>
  </head>

  <nav class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/restaurants">Restaurants</a>
    <a href="/categories">Categories</a>
    <a href="/idiomes">Idiomes</a>
  </nav>

  <body>
    <div class="container row">
      <div class="column">
        <h2>Afegir un plat nou:</h2>
        <br>
        <form action="/create-menu" method="POST">
          <label for="name">Nom del plat:</label>
          <input type="text" name="name" maxlength="255" required>
          <br>
          <label for="allergens">Alèrgens:</label>
          <input type="text" name="allergens" maxlength="255">
          <br>
          <label for="preu">Preu:</label>
          <input type="number" name="preu" step='0.01' value='0.00' min="0.00" placeholder='0.00' required>
          <br>
          <label for="complements">Inclou:</label>
          <select name="complements">
            <option value="No selected selected" selected disabled>Escull guarnició:</option>
            <option value="Patates">Patates</option>
            <option value="Amanida">Amanida</option>
            <option value="Patates y amanida">Patates y amanida</option>
            <option value="Pebrots">Pebrots</option>
            <option value="Sense guranició">Sense guranició</option>
          </select>
          <button type="submit">Afegir plat a la carta</button>
        </form>
      </div>
      <div class="column">
        <h2>Menú:</h2>
        <ul class="restaurants">
          <% for (var i = 0; i < menu.length; i++) {%>
            <li class="restaurant">
              <b>Nom:</b> <span><%= menu[i].name %></span><br>
              <b>Alèrgens:</b> <span><%= menu[i].allergens %></span><br>
              <b>Preu:</b> <span><%= menu[i].preu %></span>€<br>
              <b>Guarnició:</b> <span><%= menu[i].complements %></span><br>
            </li>
            <br>
          <% } %>
        </ul>
      </div>
    </div>
  </body>
</html>
